<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="CarTeamPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <!--Toca entity por entity, exclude-unlisted-clases = false no funciona-->
    <class>co.edu.uniandes.csw.bookstore.entities.AdministradorEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.ArticuloEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.AutomovilEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.CalificacionEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.ClienteEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.FacturaEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.FichaTecnicaEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.FormaDePagoEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.MarcaEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.ModeloEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.PagoEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.PersonaEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.PuntoVentaEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.UsuarioEntity</class>
    <class>co.edu.uniandes.csw.bookstore.entities.VendedorEntity</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
 <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.target-database" value="Derby"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/carTeamDB"/>
      <property name="javax.persistence.jdbc.user" value="APP"/>
      <property name="javax.persistence.jdbc.password" value="APP"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
